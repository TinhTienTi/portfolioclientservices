@using ProfolioClient.App
@using ProfolioClient.App.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var homeProfileData = ViewData["HomeData"] as List<PortfolioServices.Dto.ProfileResponseDto>;
    var serviceProfileData = ViewData["ServiceData"] as List<PortfolioServices.Dto.ServiceProfileResponseDto>;
    var aboutProfileData = ViewData["AboutData"] as List<PortfolioServices.Dto.ProfileResponseDto>;
    var clientProfileData = ViewData["ClientData"] as List<PortfolioServices.Dto.ClientProfileResponseDto>;
    var portfolioProfileData = ViewData["PortfolioData"] as List<PortfolioServices.Dto.PortfolioProfileResponseDto>;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Profolio</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link href="~/css/meyawo.css" rel="stylesheet" asp-append-version="true" />

    <link rel="stylesheet" href="~/ProfolioClient.App.styles.css" asp-append-version="true" />

    <link href="~/themify-icons/css/themify-icons.css" rel="stylesheet" />

    <style>
        #langaugeSelect {
            bottom: 20px;
            right: 30px;
            display: block;
            position: fixed;
            border-radius: 10px;
            width: 130px;
            text-align: center;
        }

            #langaugeSelect:hover {
                cursor: pointer;
            }
    </style>

    <script src="~/lib/jquery/jquery-3.4.1.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

</head>

<body data-spy="scroll" data-target=".navbar" data-offset="40" id="home">
    <!-- page header -->
    <header id="home" class="header">
        <div class="overlay"></div>
        <div class="header-content container">
            @foreach (var item in homeProfileData)
            {
                <h1 class="header-title">
                    @if (item.Category == "Up")
                    {
                        <span class="up">@item.Value</span>
                    }
                    @if (item.Category == "Down")
                    {
                        <span class="down">@item.Value</span>
                    }
                </h1>
                @if (item.Category == "Subtitle")
                {
                    <p class="header-subtitle">@item.Value</p>
                }
            }

            <button class="btn btn-primary">Visit My Works</button>
        </div>
    </header><!-- end of page header -->
    <!-- about section -->
    <section class="section pt-0" id="about">
        <!-- container -->
        <div class="container header-content ">
            <!-- about wrapper -->
            <div class="about">
                <div class="about-img-holder">
                    @for (int i = 0; i < aboutProfileData.Count; i++)
                    {
                        if (aboutProfileData[i].Category == "Image")
                        {
                            <img src="@aboutProfileData[i].ImgUrl" asp-append-version="true" class="about-img" />
                            break;
                        }
                    }
                </div>
                <div class="about-caption">
                    @foreach (var item in aboutProfileData)
                    {
                        @if (item.Category == "Subtitle")
                        {
                            <p class="section-subtitle">@item.Value</p>
                        }
                        @if (item.Category == "Title")
                        {
                            <h2 class="section-title mb-3">@item.Value</h2>
                        }
                        @if (item.Category == "Description")
                        {
                            <p id="about_description_id">@item.Value</p>
                        }
                    }
                    <button class="btn-rounded btn btn-outline-primary mt-4">Download CV</button>
                </div>
                <!-- end of about wrapper -->
            </div>
        </div><!-- end of container -->
    </section> <!-- end of about section -->
    <!-- service section -->
    <section class="section" id="service">
        <div class="container text-center">
            <p class="section-subtitle">What I Do ?</p>
            <h6 class="section-title mb-6">Service</h6>
            <!-- row -->
            <div class="row">
                @foreach (var item in serviceProfileData)
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="service-card">
                            <div class="body">
                                <img src="@item.ImgUrl" asp-append-version="true" class="icon" />
                                <h6 class="title">@item.Title</h6>
                                <p class="subtitle">@item.SubTitle</p>
                            </div>
                        </div>
                    </div>
                }
            </div><!-- end of row -->
        </div>
    </section><!-- end of service section -->
    <!-- portfolio section -->
    <section class="section" id="portfolio">
        <div class="container text-center">
            <p class="section-subtitle">What I Did ?</p>
            <h6 class="section-title mb-6">Portfolio</h6>
            <!-- row -->
            <div class="row">
                @foreach (var item in portfolioProfileData)
                {
                    <div class="col-md-4">
                        <a href="#" class="portfolio-card">
                            <img src="@item.ImgUrl" asp-append-version="true" class="img-responsive rounde" />
                            <span class="portfolio-card-overlay">
                                <span class="portfolio-card-caption">
                                    <h4>@item.Title</h4>
                                    <p class="font-weight-normal">@item.SubTitle</p>
                                </span>
                            </span>
                        </a>
                    </div>
                }                        
            </div><!-- end of row -->
        </div><!-- end of container -->
    </section>
    <!-- end
    </section> <!-- end of portfolio section -->
    <!-- section -->
    <section class="section-sm bg-primary">
        <!-- container -->
        <div class="container text-center text-sm-left">
            <!-- row -->
            <div class="row align-items-center">
                <div class="col-sm offset-md-1 mb-4 mb-md-0">
                    <h6 class="title text-light">Want to work with me?</h6>
                    <p class="m-0 text-light">Always feel Free to Contact & Hire me</p>
                </div>
                <div class="col-sm offset-sm-2 offset-md-3">
                    <button class="btn btn-lg my-font btn-light rounded">Hire Me</button>
                </div>
            </div> <!-- end of row -->
        </div> <!-- end of container -->
    </section> <!-- end of section -->
    <!-- testimonial section -->
    <section class="section" id="testmonial">
        <div class="container text-center">
            <p class="section-subtitle">What Think Client About Me ?</p>
            <h6 class="section-title mb-6">Testmonial</h6>

            <!-- row -->
            <div class="row">
                @foreach (var item in clientProfileData)
                {
                    <div class="col-md-6">
                        <div class="testimonial-card">
                            <div class="testimonial-card-img-holder">
                                <img src="@item.ImgUrl" asp-append-version="true" class="testimonial-card-img">
                            </div>
                            <div class="testimonial-card-body">
                                <p class="testimonial-card-subtitle">@item.Comment</p>
                                <h6 class="testimonial-card-title">@item.Client</h6>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div> <!-- end of container -->
    </section> <!-- end of testimonial section -->
    <!-- blog section -->
    <section class="section" id="blog">
        @{
            await Html.RenderPartialAsync("_Blog");
        }
    </section><!-- end of blog section -->
    <!-- contact section -->
    <section class="section" id="contact">
        @{
            await Html.RenderPartialAsync("_Contact");
        }
    </section><!-- end of contact section -->
    @*<button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>*@

    <select class="form-control" id="langaugeSelect" name="LangaugeSelectName">
        <option value="vi" selected>🇻🇳 Việt Nam</option>
        <option value="en">🇬🇧 English</option>
    </select>

    <!-- footer -->
    <div class="container">
        <footer class="footer">
            <p class="mb-0">&copy; 2023 - ProfolioClient.App - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
            <div class="social-links text-right m-auto ml-sm-auto">
                <a href="javascript:void(0)" class="link"><i class="ti-facebook"></i></a>
                <a href="javascript:void(0)" class="link"><i class="ti-twitter-alt"></i></a>
                <a href="javascript:void(0)" class="link"><i class="ti-google"></i></a>
                <a href="javascript:void(0)" class="link"><i class="ti-pinterest-alt"></i></a>
                <a href="javascript:void(0)" class="link"><i class="ti-instagram"></i></a>
                <a href="javascript:void(0)" class="link"><i class="ti-rss"></i></a>
            </div>
        </footer>
    </div> <!-- end of page footer -->

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
